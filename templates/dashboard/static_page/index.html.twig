{% extends 'admin.html.twig' %}

{% block title %}{{'Static Pages :: Dashboard'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Static Pages'|trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Slug</th>
                <th class="actions-column pull-right">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for static_page in static_pages %}
            <tr>
                <td>{{ static_page.title }}</td>
                <td>{{ static_page.slug }}</td>
                <td class="actions-column pull-right">
                    <div class="buttons-group button-group-pull-right">
                        <a href="{{ path('static_page_show', {'id': static_page.id}) }}" class="button button-small">{{'Show'|trans}}</a>
                        <a href="{{ path('static_page_edit', {'id': static_page.id}) }}" class="button button-small">{{'Edit'|trans}}</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">
                    <div class="alert">
                        <div class="alert-message">{{ 'Can\'t find any static page'|trans }}</div>
                        <div class="alert-actions">
                            <a href="{{ path('static_page_new') }}" class="button">{{ 'Create first?' | trans }}</a>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if static_pages|length > 0 %}
    <a href="{{ path('static_page_new') }}" class="button">{{'Create new static page'|trans}}</a>
    {% endif %}
{% endblock %}
