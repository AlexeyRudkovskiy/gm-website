{% extends 'admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>{{ 'Products' | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="id-column">{{'Id'|trans}}</th>
                <th>{{ 'Title'|trans }}</th>
                <th class="actions-column pull-right">
                    <a href="{{ path('product_new') }}" class="button button-small text-weight-normal">{{ 'create new product' | trans }}</a>
                </th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td class="id-column">{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td class="actions-column pull-right">
                    <div class="buttons-group button-group-pull-right">
                        <a href="{{ path('product_show', {'id': product.id}) }}" class="button button-small">{{'Show'|trans}}</a>
                        <a href="{{ path('product_edit', {'id': product.id}) }}" class="button button-small">{{'Edit'|trans}}</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">
                    <div class="alert">
                        <div class="alert-message">{{ 'Can not find any product' }}</div>
                        <div class="alert-action">
                            <a href="{{ path('product_new') }}" class="button">{{ 'Create first?' | trans }}</a>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{%- block javascript -%}
