{% extends 'admin.html.twig' %}

{% block title %}{{ 'Partners :: Dashboard' | trans }}{% endblock %}

{% block body %}
    <h1>{{'Partners'|trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="id-column">{{ 'ID' | trans }}</th>
                <th>{{ 'Title'  | trans}}</th>
                <th class="actions-column pull-right">
                    <a href="{{ path('partner_new') }}" class="button button-small text-weight-normal">{{ 'Create new partner' | trans }}</a>
                </th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td>{{ partner.id }}</td>
                <td>{{ partner.title }}</td>
                <td class="actions-column pull-right">
                    <div class="buttons-group button-group-pull-right">
                        <a href="{{ path('partner_show', {'id': partner.id}) }}" class="button button-small">{{'Show'|trans}}</a>
                        <a href="{{ path('partner_edit', {'id': partner.id}) }}" class="button button-small">{{'Edit'|trans}}</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">
                    <div class="alert">
                        <div class="alert-message">{{ 'Can not find any partner'|trans }}</div>
                        <div class="alert-action">
                            <a href="{{ path('partner_new') }}" class="button">{{ 'Create first?' | trans }}</a>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(partners) }}
{% endblock %}
