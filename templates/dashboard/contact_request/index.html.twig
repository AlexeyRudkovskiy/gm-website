{% extends 'admin.html.twig' %}

{% block title %}{{ 'Contact Requests :: Dashboard' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Contact Requests' | trans }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th class="id-column">{{ 'ID'|trans }}</th>
            <th style="width: 250px;">{{ 'Full Name'|trans }}</th>
            <th style="width: 250px;">{{ 'E-Mail'|trans }}</th>
            <th>{{ 'Question'|trans }}</th>
            <th class="pull-right" style="width: 100px;">{{ 'Status'|trans }}</th>
            <th class="actions-column small-actions-column pull-right">{{ 'Actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for request in requests %}
        <tr>
            <td class="id-column">{{ request.id }}</td>
            <td style="width: 250px;">{{ request.fullName }}</td>
            <td style="width: 250px;">{{ request.email }}</td>
            <td>{{ request.question|slice(0, 200) }}</td>
            <td class="pull-right" style="width: 100px;">{{ request.status }}</td>
            <td class="pull-right small-actions-column actions-column">
                <a href="{{path('contact_request_show', {id: request.id})}}" class="button button-small">{{ 'Show'|trans }}</a>
            </td>
        </tr>
        {% else %}
        <tr>
           <td colspan="6">
               <div class="alert">
                   <div class="alert-message">{{ 'Can\'t find any contact request' | trans }}</div>
               </div>
           </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(requests) }}
{% endblock %}
