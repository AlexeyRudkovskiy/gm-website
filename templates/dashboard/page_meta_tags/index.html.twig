{% extends 'admin.html.twig' %}

{% block title %}{{'Meta Tags :: Dashboard' | trans}}{% endblock %}

{% block body %}
    <h1>{{ 'Meta Tags' | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="id-column">{{'ID' | trans}}</th>
                <th>{{'URL'|trans}}</th>
                <th class="actions-column pull-right">{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for page_meta_tag in page_meta_tags %}
            <tr>
                <td class="id-column">{{ page_meta_tag.id }}</td>
                <td>{{ page_meta_tag.url }}</td>
                <td class="actions-column pull-right">
                    <div class="buttons-group button-group-pull-right">
                        <a href="{{ path('page_meta_tags_show', {'id': page_meta_tag.id}) }}" class="button button-small">{{'Show' | trans }}</a>
                        <a href="{{ path('page_meta_tags_edit', {'id': page_meta_tag.id}) }}" class="button button-small">{{'Edit' | trans}}</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">
                    <div class="alert">
                        <div class="alert-message">{{'Can\'t find any page with meta tags' |trans }}</div>
                        <div class="alert-actions">
                            <a href="{{ path('page_meta_tags_new') }}" class="button">{{ 'Create first?'|trans }}</a>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if page_meta_tags|length > 0 %}
    <a href="{{ path('page_meta_tags_new') }}" class="button">{{'Create new page' | trans}}</a>
    {% endif %}
{% endblock %}
